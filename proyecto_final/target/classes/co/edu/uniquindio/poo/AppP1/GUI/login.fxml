<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="300.0" spacing="10.0" style="-fx-background-color: #F0F2F5;" stylesheets="@estilos.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.AppP1.GUI.LoginController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label styleClass="login-title" text="Bienvenido al Banco UQ" />
      <TextField fx:id="txtIdentificacion" promptText="Identificación" styleClass="login-textfield" />
      <PasswordField fx:id="txtPin" promptText="PIN" styleClass="login-textfield" />
      <Button onAction="#handleLoginButton" prefHeight="40.0" prefWidth="200.0" styleClass="login-button" text="Iniciar Sesión" />
      <Label fx:id="lblMensaje" styleClass="login-message" text="" textFill="RED" />

      <Button onAction="#handleRegistrarseButton" prefHeight="40.0" prefWidth="200.0" styleClass="register-button" text="Registrarse">
        <VBox.margin>
            <Insets top="10.0" /> </VBox.margin>
      </Button>

      <Button onAction="#handleExitButton" prefHeight="40.0" prefWidth="200.0" styleClass="exit-button" text="Salir" />
   </children>
</VBox>